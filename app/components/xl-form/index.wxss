.form-section{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 25rpx;
}
.form-title{
  padding:10px 0;
  text-align: center;
}
.form-label{
  text-align: center;
  width: 30%;
  font-weight: 600;
}
.form-content{
  width: 70%;
}
.input{
  padding: 10px;
  border-radius: 0.375rem;
  border: 2px solid var(--gary-color);
}
.picker{
  padding: 1px 5px;
  height: 100%;
  border-radius: 0.375rem;
  border: 2px solid var(--gary-color);
}
.form-section-btns > button{
  background-color: var(--primary-color);
  margin-top: 20rpx;
  width: 100%;
}