<view class="container">
  <view class="card">
    <view class="form-title">{{ title }}</view>
    <form onSubmit="onSubmit" onReset="onReset">
      <view class="form-section" wx:for="{{column}}" wx:key="unique">
        <view class="form-label">{{item.label}}</view>
        <view class="form-content">
          <!-- slider -->
          <slider wx:if="{{item.type === 'slider'}}" bindchange="bindChange" data-key="{{item.key}}" value="{{params[item.key]}}" />
          <!-- input -->
          <input wx:if="{{item.type === 'input'}}" class="input" bindchange="bindChange" data-key="{{item.key}}" value="{{params[item.key]}}" />
          <!-- radio -->
          <block wx:if="{{item.type === 'radio'}}">
            <radio-group bindchange="radioChange" style="display: flex;">
              <label class="weui-cell weui-check__label" wx:for="{{item.options}}" wx:key="{{item.id}}">
                  <radio value="{{item.value}}" checked="true" />
                <view class="weui-cell__bd">{{item.name}}</view>
              </label>
            </radio-group>
          </block>
          <!-- picker -->
          <picker wx:if="{{item.type === 'picker'}}" bindchange="bindChange" data-key="{{item.key}}" range="{{item.options}}" range-key="name" class="picker" value="{{params[item.key]}}">
            {{item.options[params[item.key]].name}}
          </picker>
        </view>
      </view>

      <view class="form-section-btns">
        <slot></slot>
      </view>
    </form>
  </view>
</view>