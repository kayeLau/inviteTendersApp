<view class="form-container">
  <view class="form-title">{{ title }}</view>
  <form onSubmit="onSubmit" onReset="onReset">
    <view class="form-section" wx:for="{{column}}" wx:key="unique">
        <!-- slider -->
        <slider wx:if="{{item.type === 'slider'}}" bindchange="bindChange" data-key="{{item.key}}" value="{{params[item.key]}}" />
        <!-- input -->
        <t-input wx:if="{{item.type === 'input'}}" label="{{item.label}}" placeholder="请输入文字" bindchange="bindChange" data-key="{{item.key}}" value="{{params[item.key]}}" />
        <!-- radio -->
        <block wx:if="{{item.type === 'radio'}}">
          <radio-group bindchange="bindChange" style="display: flex;">
            <label class="weui-cell weui-check__label" wx:for="{{item.options}}" wx:key="unique">
              <radio value="{{item.value}}" checked="true" />
              <view class="weui-cell__bd">{{item.name}}</view>
            </label>
          </radio-group>
        </block>
        <!-- datePicker -->
        <picker wx:if="{{item.type === 'datepicker'}}" bindchange="bindChange" mode="date" class="picker" value="{{params[item.key]}}" data-key="{{item.key}}">
          {{params[item.key]}}
        </picker>
        <!-- picker -->
        <view wx:if="{{item.type === 'picker'}}">
        <t-cell class="mb-16" title="{{item.label}}" arrow hover  bind:click="showPicker"/>
        <t-picker visible="{{item.visible}}" value="{{params[item.key]}}" title="{{item.label}}"  bindchange="bindChange" cancelBtn="取消" confirmBtn="确认">
          <t-picker-item options="{{item.options}}"></t-picker-item>
        </t-picker>
        </view>
        <!-- stuff-picker -->
        <view wx:if="{{item.type === 'staffPicker'}}" bind:tap="showStaffPenal" id="staff-picker">
          <view class="btn-icon btn-warning">选择人员</view>
          <view class="selected-list">
            <view class="selected-item" wx:for="{{params[item.key]}}" wx:key="unique">{{item.user_name}}</view>
          </view>
      </view>
    </view>

    <view class="form-section-btns">
      <slot></slot>
    </view>
  </form>

</view>