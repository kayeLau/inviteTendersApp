/**app.wxss**/
page{
  --primary-color:#3b82f6;
  --primary-color-light:#a0cfff;
  --success-color:#67C23A;
  --secondary-color:#FFE9CE;
  --warning-color:#e6a23c;
  --warning-color-light:#f3d19e;
  --danger-color:#FF92A4;
  --gary-color:#ccc;
  --font-size-smal:30rpx;
  --font-size-big:40rpx;
  --background-color:#f6f6f6;
  --main-color:#ffffff;
}
.container {
  box-sizing: border-box;
  font-size: 35rpx;
  background-color: var(--background-color);
  height: 100vh;
}
.flex{
  display: flex;
  justify-content: center;
  align-items: center;
}
.column{
  flex-direction: column;
}
.gap{
  gap:10px
}
/* btn */
.btn-group{
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}
.float-btn-group{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 10rpx;
  position: fixed;
  bottom: 0;
}
.btn-info{
  color: #ffffff;
  background-color:var(--gary-color);
}
.btn-danger{
  color: #ffffff;
  background-color:var(--danger-color);
}
.btn-primary{
  color: #ffffff;
  background-color:var(--primary-color);
}
.btn-warning{
  color: #ffffff;
  background-color:var(--warning-color);
}
.btn-success{
  color: #ffffff;
  background-color:var(--success-color);
}
.footer-btn{
  font-weight: bold;
  margin: auto;
  color: #ffffff;
  border-radius: 1.5rem;
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.round-btn, .round-btn-whole{
  font-weight: bold;
  color: #ffffff;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.round-btn-whole{
  border-radius: 1.5rem;
}
.round-btn:nth-child(1){
  border-top-left-radius: 1.5rem;
  border-bottom-left-radius: 1.5rem;
}
.round-btn:nth-child(2){
  border-top-right-radius: 1.5rem;
  border-bottom-right-radius: 1.5rem;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}
/* card */
.card{
  padding: 20rpx 20rpx;
  background-color: #ffffff;
}
.round{
  border-radius: 15rpx;
}
/* font */
.font-bold{
  font-weight: bold;
}
.font-big{
  font-size: var(--font-size-big);
}
.font-center{
  text-align: center;
}
.footer{
  margin: auto;
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* st */
.st-detail-price{
  font-size: 50rpx;
  font-weight: 700;
  color: var(--primary-color);
}
.st-detail-title{
  padding-left: 20rpx;
  background-color: #fff;
  border-top: 3px solid var(--background-color);
}
.st-detail-item{
  padding: 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}
/* popup */
.popup-panel{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
}
/* avatar */
.avatar-list{
  gap: 40rpx;
  display: flex;
  flex-wrap: wrap
}
.avatar{
  width:120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: var(--primary-color-light);
}
.tips{
  color: #D54941 !important;
  padding-left: 100rpx;
}
.group-list{
    margin: 10rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}







