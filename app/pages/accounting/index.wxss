.role-gird{
  box-sizing: border-box;
  padding: 30rpx;
  height: 100%;
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  gap: 10px;
}
.role-box{
  border-radius: 0.375rem;
  background-color: rgba(48,118,231,0.8);
  /* border:5px solid rgba(48,118,231,0.5); */
  color: #ffffff;
  font-weight: 700;
  font-size: 50rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.role-box-image{
  position: relative;
  overflow: hidden;
  padding: 15rpx;
  border-radius: 50%;
  background: #ffffff;
  width: 200rpx;
  height: 200rpx;
}
.role-box-image > image {
  position: absolute;
  bottom: -8rpx;
  width: 200rpx;
  height: 200rpx;
}