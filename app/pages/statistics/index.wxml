<view class="container">
  <view>
    <view class="attendance-header">
      <view bind:tap="handleCalendar">
        <view>{{dateLabel[0]}}</view>
        <t-icon class="icon" name="swap-right" size="40rpx" />
        <view>{{dateLabel[1]}}</view>
      </view>
      <view bind:tap="showStaffPenal">选择項目</view>
    </view>
    <view>
      <view>
        <t-cell-group>
          <t-cell wx:for="{{summary}}" wx:key="unique" 
          t-class="card" t-class-title="card-title"
          title="{{recordType[item.type]}}"
          note="{{ item.total }}¥"
          />
          <t-cell
          t-class="card-total" t-class-title="card-title"
          title="未结"
          note="{{ totalAmount }}¥"
          />
        </t-cell-group>
      </view>
    </view>
  </view>
  <t-calendar visible="{{dateVisible}}" value="{{value}}" type="range" bind:confirm="handleConfirm" bind:close="onClose" />
</view>