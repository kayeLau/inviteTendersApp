/**index.wxss**/
.detail{
  font-size: 33rpx;
  padding: 0 10rpx;
  border-style:solid;
  border-radius:2ch;
  border-width:3px;
  border-color: var(--primary-color);
  margin: 5px;
  letter-spacing:150%;
  line-height: 180%;
}
.detail-body{
  display: inline-block;
  padding-top: 5px;
}
.detail-body:nth-child(1){
  padding: 5px 0;
  font-size: 35rpx;
  text-align: center;
  font-weight: bold;
}
.table{
  display: block;
  min-width: 200vw;
  border-top: 2px rgb(78, 78, 78) solid;
  border-bottom: 2px rgb(78, 78, 78) solid;
}
