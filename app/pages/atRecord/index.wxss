.attendance-header{
  position: relative;
  height: 100rpx;
  background-color: var(--main-color);
  display: flex;
  align-items: center;
}

.attendance-header > view{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.attendance-header > view:nth-child(1){
  border-right: 1px solid #cccccc;
}

.attendance-header > view:nth-child(2){
  border-right: 1px solid #cccccc;
}

.search-penal{
  position: absolute;
}

.attendance-scroll{
  margin-top: 20rpx;
  height: 100%;
}

.attendance-item{
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 1px;
  border-bottom: 1px solid #ccc;
}